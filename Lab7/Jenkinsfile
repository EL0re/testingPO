pipeline 
{
    agent any 
    stages 
    {
        stage('Qemu') 
        {
            steps 
            {
                echo 'Stage Qemu: Cleaning and preparing environment'
                sh 'rm -rf romulus romulus.zip'
                
                echo 'Stage Qemu: Updating packages and installing dependencies'
                sh 'apt update && apt install -y qemu-system wget unzip'
                
                echo 'Stage Qemu: Downloading romulus.zip'
                sh 'wget https://jenkins.openbmc.org/job/ci-openbmc/lastSuccessfulBuild/distro=ubuntu,label=docker-builder,target=romulus/artifact/openbmc/build/tmp/deploy/images/romulus/*zip*/romulus.zip'
                sh 'unzip romulus.zip'
                
                echo 'Stage Qemu: Starting QEMU emulator'
                sh ''' 
                    LATEST_MTD=$(ls romulus/obmc-phosphor-image-romulus-*.static.mtd | sort -V | tail -1)
                    echo "Using MTD file: $LATEST_MTD"
                    
                    qemu-system-arm \
                        -m 256 \
                        -M romulus-bmc \
                        -nographic \
                        -drive file=$LATEST_MTD,format=raw,if=mtd \
                        -net nic \
                        -net user,hostfwd=:0.0.0.0:2222-:22,hostfwd=:0.0.0.0:2443-:443,hostfwd=udp:0.0.0.0:2623-:623 \
                        > qemu_output.log 2>&1 &
                        
                    QEMU_PID=$!
                    echo "QEMU started with PID: $QEMU_PID"
                    echo $QEMU_PID > qemu.pid
                    
                    echo "Waiting for QEMU to boot..."
                    sleep 180
                    
                    if ps -p $QEMU_PID > /dev/null; then
                        echo "QEMU is running successfully"
                    else
                        echo "ERROR: QEMU process died"
                        echo "QEMU output:"
                        cat qemu_output.log
                        exit 1
                    fi
                '''
            }
        }
        stage('Test Connection') {
            steps {
                echo 'Testing detailed connection to QEMU web interface...'
                sh '''
                    echo "=== Detailed Web Interface Test ==="
                    # Тестируем базовый доступ
                    curl -k -s -o /dev/null -w "HTTP Status: %{http_code}\n" https://127.0.0.1:2443/ || echo "Curl failed"
                    
                    # Тестируем конкретно страницу логина
                    echo "=== Testing login page ==="
                    curl -k -s https://127.0.0.1:2443/login | head -5 || echo "Login page not accessible"
                    
                    # Тестируем Redfish API
                    echo "=== Testing Redfish API ==="
                    curl -k -u "root:0penBmc" https://127.0.0.1:2443/redfish/v1/ || echo "Redfish API failed"
                    
                    echo "=== Python connectivity test ==="
                    python3 -c "
        import requests
        import urllib3
        urllib3.disable_warnings(urllib3.exceptions.InsecureRequestWarning)

        try:
            # Test basic connection
            response = requests.get('https://127.0.0.1:2443', verify=False, timeout=10)
            print(f'Basic connection - Status: {response.status_code}')
            
            # Test login page
            response = requests.get('https://127.0.0.1:2443/login', verify=False, timeout=10)
            print(f'Login page - Status: {response.status_code}')
            
            # Test Redfish API
            response = requests.get('https://127.0.0.1:2443/redfish/v1', verify=False, timeout=10, auth=('root', '0penBmc'))
            print(f'Redfish API - Status: {response.status_code}')
            
        except Exception as e:
            print(f'Error: {e}')
            import traceback
            traceback.print_exc()
        "
                '''
            }
        }
        stage('Auto') {
            steps {
                echo 'Stage Auto: Installing python3 and test dependencies'
                sh 'apt install -y python3 python3-pytest python3-selenium python3-requests'
                
                echo 'Stage Auto: Running Selenium autotests with detailed output'
                catchError(buildResult: 'SUCCESS', stageResult: 'UNSTABLE') {
                    dir('../Lab4') {
                        sh '''
                            echo "=== Current directory ==="
                            pwd
                            ls -la
                            
                            echo "=== Running Python connectivity test ==="
                            python3 -c "
        import requests
        import urllib3
        urllib3.disable_warnings(urllib3.exceptions.InsecureRequestWarning)

        try:
            response = requests.get('https://127.0.0.1:2443/login', verify=False, timeout=10)
            print(f'Login page status: {response.status_code}')
            print(f'Response headers: {dict(response.headers)}')
            print('✅ Web interface is accessible')
        except Exception as e:
            print(f'❌ Error accessing web interface: {e}')
            import traceback
            traceback.print_exc()
        "

                            echo "=== Running Selenium test with debug ==="
                            python3 -c "
        from selenium import webdriver
        from selenium.webdriver.chrome.options import Options
        import time

        options = Options()
        options.add_argument('--ignore-certificate-errors')
        options.add_argument('--headless')
        options.add_argument('--no-sandbox')
        options.add_argument('--disable-dev-shm-usage')
        options.add_argument('--disable-gpu')

        print('Starting Chrome driver...')
        driver = webdriver.Chrome(options=options)

        try:
            print('Navigating to login page...')
            driver.get('https://127.0.0.1:2443/login')
            print(f'Current URL: {driver.current_url}')
            print(f'Page title: {driver.title}')
            print(f'Page source length: {len(driver.page_source)}')
            
            # Check for login form elements
            from selenium.webdriver.common.by import By
            elements = driver.find_elements(By.TAG_NAME, 'input')
            print(f'Found {len(elements)} input elements')
            for elem in elements:
                print(f'  Input: id={elem.get_attribute(\"id\")}, type={elem.get_attribute(\"type\")}')
                
            print('✅ Selenium can access the page')
            
        except Exception as e:
            print(f'❌ Selenium error: {e}')
            import traceback
            traceback.print_exc()
        finally:
            driver.quit()
            print('Chrome driver closed')
        "

                            echo "=== Running actual pytest ==="
                            # Запускаем один тест для диагностики
                            python3 -m pytest -v test_login.py::test_login -s > autotest_results.txt 2>&1 || echo "Test finished with exit code: $?"
                            echo "=== Pytest output ==="
                            cat autotest_results.txt
                        '''
                        archiveArtifacts 'autotest_results.txt'
                    }
                }
            }
        }
        stage('Locust') 
        {
            steps 
            {
                echo 'Stage Locust: Installing Locust load testing tool'
                sh 'apt install -y python3 locust'
                
                catchError(buildResult: 'SUCCESS', stageResult: 'UNSTABLE') 
                {
                    echo 'Stage Locust: Running load tests'
                    dir('../Lab6') {
                        sh 'ls'
                        sh 'timeout 180 locust --headless --users 50 --spawn-rate 5 --run-time 3m --host=https://127.0.0.1:2443 > locust_results.txt 2>&1'
                        archiveArtifacts 'locust_results.txt'
                    }
                }
            }
        }
        stage('Stop Qemu') 
        {
            steps 
            {
                echo 'Stage Stop Qemu: Stopping QEMU emulator and cleaning up'
                sh '''
                    if [ -f "qemu.pid" ]; then
                        QEMU_PID=$(cat qemu.pid)
                        kill $QEMU_PID 2>/dev/null || true
                        rm -f qemu.pid
                        echo "QEMU stopped"
                    fi
                    rm -rf romulus/ romulus.zip || true
                    rm -f *.log *.pid *.json *.csv || true
                    rm -f qemu.pid image_path.txt config.env || true
                    du -sh . | awk '{print $1}'
                '''
            }
        }
    }
    post 
    {
        always 
        {
            echo 'Archiving all test-related text files...'
            archiveArtifacts artifacts: '**/*.txt', fingerprint: true
            echo 'Pipeline finished.'
        }
    }
}
